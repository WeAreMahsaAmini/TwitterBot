generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  
  twitterId String @unique
  username String @unique
  name String
  protected Boolean
  verified Boolean

  accessToken String
  refreshToken String
}

model ForLibertyAccount {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  
  userId String @unique
  language String @unique

  resetRules Boolean @default(false)
}
